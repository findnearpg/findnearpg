NODE_ENV=production

# Public site URL used for canonical/sitemap/robots generation
VITE_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# Auth/session
AUTH_URL=https://your-domain.com
AUTH_SECRET=replace-with-a-long-random-secret

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_DB=findnearpg

# Email (required for OTP/password flows)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=you@example.com
SMTP_PASS=replace-with-app-password
SMTP_FROM=FindNearPG <you@example.com>

# Media uploads (Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# PhonePe payments (optional if not using payments in production yet)
PHONEPE_MERCHANT_ID=
PHONEPE_SALT_KEY=
PHONEPE_SALT_INDEX=1
PHONEPE_BASE_URL=https://api-preprod.phonepe.com/apis/pg-sandbox

# reCAPTCHA (optional but recommended)
RECAPTCHA_SECRET_KEY=

# Admin bootstrap endpoint protection
ADMIN_BOOTSTRAP_KEY=
